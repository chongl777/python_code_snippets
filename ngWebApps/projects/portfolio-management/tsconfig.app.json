/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "outDir": "../../out-tsc/app",
        "baseUrl": "./",
        "types": ["d3"],
        "paths": {
            "@app/*": ["./src/app/*"],
            "@components/*": ["./src/app/components/*"],
            "@services/*": ["./src/app/services/*"],
            "@environments/*": ["./src/environments/*"],
            "@models/*": ["./src/app/models/*"],
        },
        "typeRoots": [
            "./@types"
        ],
    },
    "files": [
        "src/main.ts",
        "src/polyfills.ts"
    ],
    "include": [
        "src/**/*.d.ts"
    ]
}
